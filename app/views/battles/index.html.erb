<div class="container">
  <div class="index-header">
    <h1>Battles</h1>
    <%= link_to "Launch a new battle", new_battle_path, class: 'btn-submit-small' %>
  </div>
  <% if @battles.empty? %>
    No battles were fought yet.
    <%= link_to "Launch your first battle!", new_battle_path, class: 'yellow-link' %>
  <% else %>
    <table class="margin-dotted-table">
      <tr>
        <td><strong>Winner ğŸ‘</strong></td>
        <td></td>
        <td><strong>Loser ğŸ‘</strong></td>
        <td></td>
      </tr>
      <% @battles.each do |battle| %>
        <tr class="battle-item">
          <td><%= battle.winner ? battle.winner.name : "Tie" %><%=" - #{battle.winner_score}" if battle.winner %></td>
          <td>VS</td>
          <td><%= battle.loser ? battle.loser.name : "Tie" %><%=" - #{battle.loser_score}" if battle.loser %></td>
          <td><p class="text-transparent m-b-0"><em><%= battle.created_at.strftime('%a, %B %e %Y - %l:%M %p') %></em></p></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>

