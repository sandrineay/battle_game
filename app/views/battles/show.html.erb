<div class="container">
  <h1 class="m-b-40"><%= @winner.name %> prevailed! 🏆</h1>

  <div class="result-content">
    <% if @winner.picture_url %>
      <%= cl_image_tag @winner.picture, height: 100 %>
    <% else %>
      <%= image_tag 'avatar.png', class: 'avatar-large' %>
    <% end %>
    <p class="text-transparent fixed-width-p">After a long and grueling battle, <%= @winner.name %> won the fight.</p>
  </div>

  <h2 class="m-t-40">Battle recap:</h2>

  <table class="margin-dotted-table">
    <tr>
      <td></td>
      <td><%= @player_1.name %></td>
      <td><%= @player_2.name %></td>
    </tr>
    <tr>
      <td>Score</td>
      <td><%= @score_1.round(1) %></td>
      <td><%= @score_2.round(1) %></td>
    </tr>
    <tr>
      <td>Life points</td>
      <td><%= @player_1.life_points.round(1) %> <i class="fas fa-heart"></i></td>
      <td><%= @player_2.life_points.round(1) %> <i class="fas fa-heart"></i></td>
    </tr>
    <tr>
      <td>Attack points</td>
      <td><%= @player_1.attack_points.round(1) %> <i class="fas fa-fist-raised"></i></td>
      <td><%= @player_2.attack_points.round(1) %> <i class="fas fa-fist-raised"></i></td>
    </tr>
  </table>

  <%= link_to "Launch new battle", new_battle_path, class: 'btn-submit-small' %>
</div>


